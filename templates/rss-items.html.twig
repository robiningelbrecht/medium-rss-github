<svg xmlns="http://www.w3.org/2000/svg" fill="none" width="1400" height="{{ height }}">
    <foreignObject width="100%" height="100%">
        <div xmlns="http://www.w3.org/1999/xhtml">
            <style>
                * {
                    margin: 0;
                    padding: 0;
                    box-sizing: border-box;
                    font-family: sans-serif
                }

                a {
                    text-decoration: none;
                    color: inherit
                }

                .container {
                    display: flex;
                    flex-wrap: wrap;
                    justify-content: space-between;
                }

                .item {
                    display: flex;
                    align-items: center;
                    width: 100%;
                    height: 120px;
                    border: 1px solid rgba(0, 0, 0, .2);
                    padding: 10px 20px;
                    border-radius: 10px;
                    background: rgb(255, 255, 255);
                    overflow: hidden;
                    text-overflow: ellipsis;
                }

                .container.two-col .item {
                    width: 698px;
                }

                .item:not(:last-child) {
                    margin-bottom: 5px;
                }

                img {
                    margin-right: 10px;
                    width: 150px;
                    height: 100%;
                    object-fit: cover;
                }

                .container.two-col img {
                    width: 100px;
                }

                .right {
                    overflow: hidden;
                    flex: 1;
                }

                .right h3,
                .right p {
                    white-space: nowrap;
                    overflow: hidden;
                    text-overflow: ellipsis;
                }

                .right p {
                    line-height: 1.5;
                    color: #555
                }

                .right h3 {
                    color: #333
                }

                .right small {
                    color: #888;
                    display: block;
                    margin-top: 5px;
                    margin-bottom: 8px
                }

            </style>
            <div class="container {{ layout }}">
                {% for item in items %}
                    <a class="item" href="{{ item.link }}" target="_blank">
                        {% if item.image %}
                            <img src="{{ item.image }}"/>
                        {% endif %}
                        <div class="right">
                            <h3>{{ item.title|raw }}</h3>
                            <small>{{ item.pubDate }}</small>
                            <p>{{ item.summary|raw }}</p>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </div>
    </foreignObject>
</svg>